<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/magin_layout"
    android:layout_marginRight="@dimen/magin_layout"
    tools:context="example.com.hb.reportproblem.activity.MainActivity">

    <ImageView
        android:alpha="0.5"
        android:src="@drawable/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_marginTop="@dimen/margin_small"
        android:id="@+id/llReportProblem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_main">

        <ImageView
            android:src="@drawable/camera"
            android:layout_width="@dimen/height_text_main"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_report"
            android:layout_marginLeft="@dimen/margin_report"
            android:gravity="center_vertical"
            android:text="Báo cáo sự cố"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_small"
        android:layout_below="@id/llReportProblem"
        android:id="@+id/llDownload"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_main">

        <ImageView
            android:src="@drawable/download"
            android:layout_width="@dimen/height_text_main"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/margin_report"
            android:id="@+id/tvDownload"
            android:text="Tải xuống báo cáo"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_report"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text_main" />
    </LinearLayout>
</RelativeLayout>
