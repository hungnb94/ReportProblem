<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/magin_layout"
    android:layout_marginRight="@dimen/magin_layout"
    tools:context="example.com.hb.reportproblem.activity.MainActivity">

    <LinearLayout
        android:id="@+id/llReportProblem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/size_report"
            android:layout_marginLeft="@dimen/margin_report"
            android:gravity="center_vertical"
            android:text="Báo cáo sự cố"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
