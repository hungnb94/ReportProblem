<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.hb.reportproblem.fragment.MotaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mô tả chi tiết vấn đề"
            android:textSize="@dimen/title_fragment" />

        <EditText
            android:id="@+id/edtMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_layout" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/height_devide"
            android:layout_marginTop="@dimen/height_devide"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ngày Viết Tag"
            android:textSize="@dimen/title_fragment" />

        <TextView
            android:id="@+id/tvDate"
            android:textSize="@dimen/size_small"
            android:text="Ngày: 06/07/2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/height_devide"
            android:layout_marginTop="@dimen/height_devide"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Loại TAG"
            android:textSize="@dimen/title_fragment" />

        <RadioGroup
            android:id="@+id/groupAMTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:checked="true"
                android:id="@+id/rbtAM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AM Tag" />

            <RadioButton
                android:id="@+id/rbtPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PM Tag" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/height_devide"
            android:layout_marginTop="@dimen/height_devide"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="HQ"
            android:textSize="@dimen/title_fragment" />

        <RadioGroup
            android:id="@+id/groupHQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:checked="true"
                android:id="@+id/rbtHQCao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HQ cao" />

            <RadioButton
                android:id="@+id/rbtHQThap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HQ thấp" />
        </RadioGroup>
    </LinearLayout>
</FrameLayout>
